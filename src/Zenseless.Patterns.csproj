<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>10.0</LangVersion>
    <Nullable>enable</Nullable>
    <PublishDocumentationFile>true</PublishDocumentationFile>
    <DocumentationFile>bin/Zenseless.Patterns.xml</DocumentationFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <PackageProjectUrl>https://github.com/danielscherzer/Zenseless.Patterns</PackageProjectUrl>
    <PackageTags>Patterns Disposable .net Noise Hash</PackageTags>
    <PackageReleaseNotes>Auto generated by AppVeyor</PackageReleaseNotes>
    <Description>Common patterns used in programming</Description>
    <Company>Daniel Scherzer</Company>
    <Authors>Daniel Scherzer</Authors>
    <Copyright>Copyright Â© 2013 Daniel Scherzer</Copyright>
    <Version>0.7.0</Version>
    <RepositoryUrl>https://github.com/danielscherzer/Zenseless.Patterns</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Include symbol files (*.pdb) in the built .nupkg -->
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
    <!--<IncludeSymbols>true</IncludeSymbols>-->
    <!--<SymbolPackageFormat>snupkg</SymbolPackageFormat>-->
    <DebugSymbols>true</DebugSymbols>
    <DebugType>embedded</DebugType>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <Target Name="PostPack" AfterTargets="Pack" Condition=" '$(APPVEYOR)' == '' ">
    <Exec Command="dotnet nuget push bin\**.nupkg  -s $(AppData)\..\Local\Temp\NuGetScratch" />
  </Target>
</Project>
